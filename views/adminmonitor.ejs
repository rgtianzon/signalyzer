<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <meta http-equiv="refresh" content="10"> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <title>Admin Home</title>
    <style>
        body {
            text-align: center;
        }
        .container {
            padding: 10px;
        }
        .item {
            width: 100px;
            padding: 10px;
            display: inline-block;
            vertical-align: middle
        }
        .navbar {
            margin-bottom: 10px;
        }

        #npdf {
            margin-bottom: 10px;
            border: 1px solid lightgray;
            padding: 10px;
            background-color: rgb(182, 212, 182);
            border-radius: 20px;
        }

        #pdf {
            margin-bottom: 10px;
            border: 1px solid lightgray;
            padding: 10px;
            background-color: rgb(182, 212, 182);
            border-radius: 20px;
        }

        #lgo {
            margin-bottom: 0;
        }

        .col-md-4 {
            text-align: center;
        }

        #welcome {
            color: white;
        }

        .item {
            width: auto;
        }
        td {
            width: auto;
        }
    </style>
</head>
<body>
    <!-- navbar start -->
    <div class="pos-f-t">
        <div class="collapse" id="navbarToggleExternalContent">
          <div class="bg-dark p-4">
              <div class="container">
                        <div class="item">
                            <a href="/adminhome" class="btn btn-outline-info">Home</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/adminpwreset" class="btn btn-outline-info">Reset Password</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/adminmonitor" class="btn btn-outline-info">Monitor</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/rostermanagement" class="btn btn-outline-info">Roster</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/managetask" class="btn btn-outline-info">Manage Tasks</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <form action="/logout" method="POST" id="lgo">
                                <button class="btn btn-outline-danger"><strong>Logout</strong></button>
                            </form>
                        </div>
              </div>
          </div>
        </div>
        <nav class="navbar navbar-dark bg-dark">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <h3 id="welcome">Welcome, <%= user.firstName %>!</h3>
        </nav>
    </div>
    <!-- navbar end -->
    <div class="container">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-12">
                <!-- On going task -->
                <iframe src="/adminmonitor2" height="500" width="100%" title="description"></iframe>
            </div>
            <div>
                <!-- Tasks history -->
                <hr>
                <p>Overall Tasks History</p>
                <table class="table">
                    <thead>
                        <tr class="table-info">
                            <th>Task ID</th>
                            <th>Full Name</th>
                            <th>Task Name</th>
                            <th>Task Type</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Duration</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for ( let et of endedTasks) { %>
                            <tr class="table-info">
                                <td><%= et.taskID %></td>
                                <td><%= et.fullName %></td>
                                <td><%= et.taskName %></td>
                                <td><%= et.taskType %></td>
                                <td><%= et.startDate %></td>
                                <td><%= et.endDate %></td>
                                <td><%= et.durationTime %></td>
                                <td><button class="btn btn-warning" data-toggle="modal" data-target="#<%= et.userName %><%= et.taskID %>">OverRide</button></td>
                            </tr>
                            <div class="modal fade" id="<%= et.userName %><%= et.taskID %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel"><%= et.fullName %>: <%= et.taskName %></h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                      </button>
                                    </div>
                                    <div class="modal-body">
                                      <form action="/adminmonitor?_method=PUT" method="POST">
                                            <div class="form-group">
                                                <input name="taskID" class="form-control" value="<%= et.taskID %>" hidden></input>
                                            </div>
                                            <div class="form-group">
                                                <input name="userName" class="form-control" value="<%= et.userName %>" hidden></input>
                                            </div>
                                            <div class="form-group">
                                                <input name="fullName" class="form-control" value="<%= et.fullName %>" disabled></input>
                                            </div>
                                            <div class="form-group">
                                                <select name="taskName" class="form-control">
                                                    <option value="<%= et.taskName %>"><%= et.taskName %></option>
                                                    <% for (let ts of tsk) { %>
                                                    <option value="<%= ts.taskName %>"><%= ts.taskName %></option>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <p>Comments: <%= et.comments %></p>
                                            <div class="form-group">
                                                <input name="startDate" class="form-control" value="<%= et.startDate %>"></input>
                                            </div>
                                            <div class="form-group">
                                                <input name="endDate" class="form-control" value="<%= et.endDate %>"></input>
                                            </div>
                                            <div class="form-group">
                                                <textarea name="comments" placeholder="Comments for <%= et.fullName %>: <%= et.taskName %>" class="form-control"></textarea>
                                            </div>
                                            <div>
                                                <button class="btn btn-warning">OverRide</button>
                                            </div>
                                      </form>
                                    </div>
                                  </div>
                                </div>
                            </div>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>