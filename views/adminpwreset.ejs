<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <title>Admin Password Reset</title>
    <style>
        body {
            text-align: center;
        }
        .container {
            padding: 10px;
        }
        .item {
            width: 100px;
            padding: 10px;
            display: inline-block;
            vertical-align: middle
        }
        .navbar {
            margin-bottom: 10px;
        }

        #lgo {
            margin-bottom: 0;
        }

        .col-md-4 {
            text-align: center;
        }

        #welcome {
            color: white;
        }

        .item {
            width: auto;
        }

        .form-control {
            width: 25%;
            text-align: center;
            margin: auto;
        }
    </style>
</head>
<body>
    <!-- navbar start -->
    <div class="pos-f-t">
        <div class="collapse" id="navbarToggleExternalContent">
          <div class="bg-dark p-4">
              <div class="container">
                        <div class="item">
                            <a href="/adminhome" class="btn btn-outline-info">Home</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/adminpwreset" class="btn btn-outline-info">Reset Password</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/adminmonitor" class="btn btn-outline-info">Monitor</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/rostermanagement" class="btn btn-outline-info">Roster</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/managetask" class="btn btn-outline-info">Manage Tasks</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <form action="/logout" method="POST" id="lgo">
                                <button class="btn btn-outline-danger"><strong>Logout</strong></button>
                            </form>
                        </div>
              </div>
          </div>
        </div>
        <nav class="navbar navbar-dark bg-dark">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <h3 id="welcome">Welcome, <%= user.firstName %>!</h3>
        </nav>
    </div>
    <!-- navbar end -->
    <div class="container">
        <h5>Fullname: <%= user.firstName%> <%= user.lastName%></h5>
        <h5>Username: <%= user.userName%></h5>
        <% if (msg && msg.length) { %>
            <div class="alert alert-success" role="alert">
                <%= msg %>
            </div>
        <% } %>
        <% if (err && err.length) { %>
            <div class="alert alert-danger" role="alert">
                <strong>ERROR: </strong><%= err %>
            </div>
        <% } %>
        <form action="/adminpwreset?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="form-group">
                <input name="password" type="password" class="form-control" placeholder="Create new password" required></input>
            </div>
            <div class="form-group">
                <input name="confirmpw" type="password" class="form-control" placeholder="Confirm new password" required></input>
            </div>
            <div>
                <button class="btn btn-outline-success"><strong>Change Password</strong></button>
            </div>
        </form>
    </div>

    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')

            // Loop over them and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
</body>
</html>