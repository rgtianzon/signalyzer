<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <title>Add User</title>
    <style>
        body {
            text-align: center;
        }
        .container {
            padding: 10px;
        }
        .item {
            width: 100px;
            padding: 10px;
            display: inline-block;
            vertical-align: middle
        }
        .navbar {
            margin-bottom: 10px;
        }

        #npdf {
            margin-bottom: 10px;
            border: 1px solid lightgray;
            padding: 10px;
            background-color: rgb(182, 212, 182);
            border-radius: 20px;
        }

        #pdf {
            margin-bottom: 10px;
            border: 1px solid lightgray;
            padding: 10px;
            background-color: rgb(182, 212, 182);
            border-radius: 20px;
        }

        #lgo {
            margin-bottom: 0;
        }

        .col-md-4 {
            text-align: center;
        }

        #welcome {
            color: white;
        }

        .item {
            width: auto;
        }
    </style>
</head>
<body>
    <!-- navbar start -->
    <div class="pos-f-t">
        <div class="collapse" id="navbarToggleExternalContent">
          <div class="bg-dark p-4">
              <div class="container">
                        <div class="item">
                            <a href="/adminhome" class="btn btn-outline-info">Home</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/adminpwreset" class="btn btn-outline-info">Reset Password</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/adminmonitor" class="btn btn-outline-info">Monitor</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/rostermanagement" class="btn btn-outline-info">Roster</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <a href="/managetask" class="btn btn-outline-info">Manage Tasks</a>
                            <!-- <button type="button" class="btn btn-outline-info">HOME</button> -->
                        </div>
                        <div class="item">
                            <form action="/logout" method="POST" id="lgo">
                                <button class="btn btn-outline-danger"><strong>Logout</strong></button>
                            </form>
                        </div>
              </div>
          </div>
        </div>
        <nav class="navbar navbar-dark bg-dark">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <h3 id="welcome">Welcome, <%= user.firstName %>!</h3>
        </nav>
    </div>
    <!-- navbar end -->
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4"></div>
            <div class="col-md-4 col-sm-4">
                <h1>Add User</h1>
                <form action="/rostermanagement" method="POST" novalidate class="validated-form">
                    <div class="form-group">
                        <input type="text" name="firstName" id="firstName" placeholder="First Name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="lastName" id="lastName" placeholder="Last Name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="userName" id="userName" placeholder="Username" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" id="password" placeholder="Password" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="isActive">Set Active</label>
                        <input type="checkbox" id="isActive" name="isActive" value="true">
                        <label for="isAdmin">Set Admin</label>
                        <input type="checkbox" id="isAdmin" name="isAdmin" value="true">
                    </div>
                    <button class="btn btn-primary mb-2">ADD USER</button>
                </form>
            </div>
            <div class="col-md-4 col-sm-4"></div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <table class="table">
                    <tr class="table-info">
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Fullname</th>
                        <th></th>
                    </tr>
                    <tbody>
                        <% for(let ros of roster) { %>
                            <tr class="table-info">
                                <td><%= ros.sigID %></td>
                                <td><%= ros.userName %></td>
                                <td><%= ros.firstName %> <%= ros.lastName %></td>
                                <td><button class="btn btn-warning" data-toggle="modal" data-target="#<%= ros.userName %><%= ros.sigID %>">Details</button></td>
                            </tr>
                            <div class="modal fade" id="<%= ros.userName %><%= ros.sigID %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel"><%= ros.firstName %> <%= ros.lastName %></h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                      </button>
                                    </div>
                                    <div class="modal-body">
                                      <form action="/rostermanagement?_method=PUT" method="POST">
                                            <div class="form-group">
                                                <input name="userName" class="form-control" value="<%= ros.userName %>" hidden></input>
                                            </div>
                                            <div class="form-group">
                                                <input name="firstName" class="form-control" value="<%= ros.firstName %>"></input>
                                            </div>
                                            <div class="form-group">
                                                <input name="lastName" class="form-control" value="<%= ros.lastName %>"></input>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" name="password" id="password" placeholder="Password" class="form-control" value="<%= ros.password %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="isActive">Set Active</label>
                                                <input type="checkbox" id="isActive" name="isActive" value="true" 
                                                <% if(ros.isActive) { %>
                                                    checked
                                                <% } %>
                                                >
                                                <label for="isAdmin">Set Admin</label>
                                                <input type="checkbox" id="isAdmin" name="isAdmin" value="true"
                                                <% if(ros.isAdmin) { %>
                                                    checked
                                                <% } %>
                                                >
                                            </div>
                                            <div>
                                                <button class="btn btn-warning">Update User</button>
                                            </div>
                                      </form>
                                    </div>
                                  </div>
                                </div>
                            </div>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')

            // Loop over them and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
</body>
</html>